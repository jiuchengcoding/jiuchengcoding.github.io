@import "bootstrap.less";

* {
  color: black;
  font-family: 'simHei';
}

.login, .regist {
  position: absolute;
  display: block;
  padding-bottom: 5px;
  background: #000000;
  border-radius: 5px;
  margin-bottom: -10px;
}

.new-logo img {
  position: absolute;
  top: 15px;
  left: 55px;
}

.container-fluid {
  padding: 0px;
  margin-bottom: 20px;
}

body > a {
  display: block;
  position: relative;
}

a:hover {
  text-decoration: none;
}

@media screen and (min-width: 768px) and (max-width: 991px) {
  .script-text b {
    display: none;
  }
}

.container-fluid {
  position: relative;
}

.grass {
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 20;
  height: 100%;
  width: 100%;
  background-color: rgba(90, 90, 90, 0.3);
}

/**ÍÆ¼ö²¿·Ö*/
.main .odd a {
  font-size: 30px;
  color: lightblue;
  font-weight: bold;
}

.main .row span {
  color: #777;
}

.container-fluid {
  color: #ffffff;
  .script-text {
    position: absolute;
    top: 20%;
    left: 15%;;
    z-index: 30;
    h3, h4 {
      color: #ffffff;
    }
    a {
      color: #fff;
      padding: 10px 5px;
      border-radius: 10px;
      background-color: #f18d54;
      border: 1px solid transparent;
    }
  }
  @media screen and (max-width: 768px) {
    .script-text > img {
      display: none;
    }

    .carousel .item > img {
      height: 300px;
    }
  }
}

.nav-xs-show {
  display: none;
}

@media screen and (max-width: 768px) {
  .nav-xs-show {
    display: block;
  }
}

.border {
  text-align: right;
}

.main {
  .small-box > div {
    display: inline-block;
    width: 140px;
    padding-left: 15px;
    margin-bottom: 5px;
  }
  b {
    font-weight: normal;
    display: inline-block;
    width: 180px;
  }
  img {
    display: inline-block;
    border-radius: 5px 5px;
  }
  .odd {
    margin-top: 20px;
    margin-bottom: 20px;
    img {
      margin-bottom: 10px;
    }
    span {
      display: block;
      margin-top: 10px;
    }
  }
  .even a {
    float: right;
    font-size: 15px;
    color: #ffffff;
    padding: 5px 10px;
    background: #9d9d9d;
    border-radius: 5px;
    font-weight: normal;
    margin: 3px 7px 0px 5px;
  }
  .even a.canbuy {
    background: darkorange;
  }
  div.border, .small-box {
    //border:1px solid #ddd;
    margin-top: 3px;
    border-radius: 15px;
  }
  div.border:hover, .small-box:hover {
    box-shadow: 10px 10px 5px #ddd;
    //border:3px solid transparent;
  }
  .hot {
    margin-top: 15px;
    margin-left: 30%;
    width: 200px;
    a {
      font-size: 15px;
      border: none;
    }
  }
}

.event {
  .static {
    position: relative;
    height: 460px;
    overflow: hidden;
  }
  .one-bg {
    background: url("../img/oYYBAFbD-KeAPX52AAD6THccQnk227.jpg") no-repeat;
    background-size: 100% 100%;
    border-radius: 5px;
  }
  .two-bg {
    .one-bg;
    background: url("../img/oYYBAFarQ7CACO5PAAHcTC_nvp8310.jpg") no-repeat;
  }
  .three-bg {
    .one-bg;
    background: url("../img/98c72d9321f641aef412ad7f531552cc.jpg") no-repeat;
  }
  .four-bg {
    .one-bg;
    background: url("../img/oYYBAFbPQ7WAJxTcAAG7yFxFb94693.jpg") no-repeat;
  }
  .small-logo {
    position: absolute;
    width: 65px;
    height: 65px;
  }
  .small-logo-one {
    background: url("../img/allbgs.png") no-repeat -112px 0px;
  }
  .small-logo-two {
    background: url("../img/allbgs.png") no-repeat -174px 0px;
  }
  .grass-index {
    position: absolute;
    top: 87%;
    width: 100%;
    background: rgba(80, 80, 80, 0.7);
    padding: 10px;
    border-radius: 5px;
    color: #ffffff;
    span {
      font-size: 18px;
      color: #ffffff;
    }
    i {
      font-size: 16px;
      font-style: normal;
      color: #ffffff;
    }
    p {
      line-height: 20px;
      color: #ffffff;
      padding-left: 20px;
    }
  }
}

.editor-play {
  .img1 {
    margin-bottom: 10px;
    width: 230px;
    height: 117px;
    background: 112px;
    background: url("../img/allbgs.png") no-repeat -725px  0px;
  }
  .img2 {
    width: 157px;
    height: 232px;
    background: url("../img/allbgs.png") no-repeat -953px 0px;
  }
  a {
    font-size: 10px;
    color: #555;
    float: left;
    margin-top: 5%;
  }
  .left-box {
    width: 200px;
    margin: auto;
  }
}

@media screen and (max-width: 768px) {
  .editor-play {
    margin-top: 20px;
    a {
      display: none;
    }
  }
}

.about {
  i {
    display: block;
    margin: auto;
    width: 90px;
    height: 85px;
  }
  .onepic{
    background: url("../img/allbgs.png") no-repeat -528px 0px;
  }
  .twopic{
    background: url("../img/allbgs.png") no-repeat -625px 0px;
  }
  .threepic{
    background: url("../img/allbgs.png") no-repeat -429px 0px;
  }

  div {
    text-align: center;
    h3 {
      color: orange;
    }
  }
}

